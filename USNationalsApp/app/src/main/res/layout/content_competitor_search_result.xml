<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/competitor_search_result"
    android:layout_width="match_parent"
    android:layout_height="@dimen/competitor_search_result_height"
    android:layout_margin="@dimen/competitor_search_result_margin"
    android:background="@drawable/border"
    tools:context="org.cubingusa.usnationals.CompetitorListActivity"
    tools:showIn="@layout/activity_competitor_list">
    <TextView
        android:layout_width="@dimen/competitor_search_result_number_width"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="@dimen/competitor_search_result_number_margin"
        android:textSize="@dimen/competitor_search_result_text_size"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/competitor_search_result_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/competitor_name_margin"
        android:layout_weight="1"
        android:textSize="@dimen/competitor_search_result_text_size"
        android:gravity="left|center_vertical"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wca_icon"
        android:layout_width="@dimen/competitor_search_result_icon_size"
        android:layout_height="@dimen/competitor_search_result_icon_size"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="@dimen/competitor_search_result_icon_margin"
        android:src="@drawable/wcalogo"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/save_button"
        android:layout_width="@dimen/competitor_search_result_icon_size"
        android:layout_height="@dimen/competitor_search_result_icon_size"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="@dimen/competitor_search_result_icon_margin"
        android:src="@drawable/star"/>
</LinearLayout>